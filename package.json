{
  "name": "boiler-plate",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "12.13.1",
    "yarn": "^1.15.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,tsx,json,html,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "yarn-deduplicate",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run --stream build",
    "build:prod": "lerna run --stream build:prod",
    "clean": "lerna run --parallel clean && rm -rf node_modules"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "lerna": "3.18.3",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "typescript": "^3.7.2",
    "typescript-plugin-css-modules": "^2.1.2",
    "yarn-deduplicate": "^1.1.1"
  }
}
